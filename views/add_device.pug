extends layout
block content
    h2.mb-3.mt-3 #{pagetitle}
    form(action="/device/add", method="post", enctype="multipart/form-data")
        .form-group
            label.small Title:
            input.form-control(name='title', type="text")
        .form-group
            label.small.mt-2 Protocol:
            select.form-control(name='protocol')
                option(value='0', selected='selected') Select protocol...
                each prot, i in protocols
                    option(value=prot._id)= prot.name
                        = ", "
                        = prot.layer
        .form-group
            label.small.mt-2 Description:
            textarea.form-control(name="description")
        .input-group
            .custom-file
                input#inpImg.custom-file-input(name='devimg', type='file', aria-describedby="devimgAddon")
                label.custom-file-label(for='devimg' style='color:lightgrey') Select Image
        input.btn.btn-success.mt-2.mr-2.col-sm-4.col-md-2(type="submit", value="Save")
        a.btn.btn-info.mt-2.mr-2.col-sm-4.col-md-2(href="/") Back