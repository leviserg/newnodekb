extends layout
//- block navcontent
//-     each device, i in devices
//-         a(href="/device/" + device._id)= device.title
block content
    h2.mt-3.mb-3 #{pagetitle}
    ul.list-group
        each device, i in devices
            li.list-group-item
                b
                    a(href="/device/" + device._id)= device.title + "."
                p.mt-1.mb-0= device.protocol.name + ", " + device.protocol.layer + ". "
                p.mt-1.mb-0
                    i= device.description
                if user
                    button.btn.btn-info.edit-dev.mt-2.float-right(data-id=device._id) Edit
    br
    if pages > 0
        .pagination.text-center
                if curpage == 1
                    a.active 1
                else
                    a(href="/1") 1
                if pages != 1
                    - var page = 2
                    while page < pages
                        if curpage == page
                            a.active= page++
                        else
                            a(href="/" + page)= page++
                if curpage == pages
                    a.active Last
                else
                    a(href="/" + pages) Last